{{!-- Section --}}
<section class="section m-4">
    <div class="container text-center">
        <div class="title py-5">
            <h1>Upload Invoice Files</h1>
            <p class ='subtitle'>
                Upload Images/PDF to the <Strong>Server</Strong>
            </p>
        </div>
        <div class="row justify-content-center">
            <div class="col-4">
                <form action="/uploadmultiple" enctype="multipart/form-data" method = "POST">
                <div class="row">
                    <div class="col-10">
                        <input type="file" class= "form-control" name = "images" id = "formFile" multiple>
                    </div>
                    <div class="col-2">
                        <input type="submit" class="btn btn-warning" value = "Upload Files">
                    </div>
                </div>
                </form>
            </div>
        </div>
{{!-- Display Images in Cards --}}
<section class="mt-3">
    <div class="row">
            {{#each images}}
                {{#each this}}
                    {{#if imageBase64}}
                        {{!-- Bootstrap cards --}}
                        <div class="col-4">
                            <div class="card shadow" style="width: 18rem;">
                                <img src="{{contentType}}" class="card-img-top" class= "img-fluid" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title font-poppins">Bill details</h5>
                                    <p class="text-secondary ">Invoice details</p>
                                    <a href="#" class="btn btn-info text-light">View Details</a>
                                </div>
                            </div>
                        </div>
 
                        {{!--End of Bootstrap cards --}}
                    {{/if}}
                {{/each}}
            {{/each}}

   </div>

</section>
{{!-- /Display Images in Cards --}}
    </div>
</section>